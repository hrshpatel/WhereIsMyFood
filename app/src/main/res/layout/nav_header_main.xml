<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/linearLayout_navigation">

    <com.conestoga.whereismyfood.customviews.RoundedImageView
        android:id="@+id/drwr_iv_user_pic"
        style="@style/imageView_navigation"
        android:src="@drawable/ic_user" />

    <TextView
        android:id="@+id/drwr_txt_name"
        style="@style/textView_navigation_name"
        android:text="Android Studio"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/drwr_txt_email"
            style="@style/textView_navigation_name"
            android:padding="@dimen/dimen_0"
            android:text="android.studio@android.com"
            android:textSize="@dimen/dimen_14_sp" />

        <ImageView
            android:id="@+id/drwr_iv_edit_profile"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dimen_10"
            android:layout_toRightOf="@id/drwr_txt_email"
            android:src="@drawable/ic_edit"
            android:tint="@android:color/white" />
    </RelativeLayout>
</LinearLayout>
